<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_thumbnail"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/ly"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/movie_thumbnail">
        <TextView
            android:id="@+id/movie_ctitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:minLines="2"
            android:maxEms="9"
            android:text="大话西游之大圣娶亲 西遊記大結局之仙履奇緣"/>

        <TextView
            android:id="@+id/movie_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="导演：凯里.阿斯瑞德"
            android:layout_marginTop="3dp"
            android:padding="3dp"
            android:textSize="14sp"
            />

            <TextView
                android:id="@+id/movie_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="主演：范.迪赛尔/道恩穷僧/呀加息/阿莉达/方可"
                android:maxLines="2"
                android:maxEms="12"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/movie_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:text="类型：动作/玄幻"/>
            <TextView
                android:id="@+id/movie_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="制片国家/地区：美国"/>
            <TextView
                android:id="@+id/how_much_saw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="23333人看过"/>
            </LinearLayout>

        <Button
            android:id="@+id/buy_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/buy_ticket_btn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:text="购票"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>